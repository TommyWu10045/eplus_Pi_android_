<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_sport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center|bottom"
                android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rl_sport_incline"
            android:layout_width="wrap_content"
            android:layout_height="261dp"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_incline_title"
                    android:layout_width="208dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="0dp"
                    android:background="#f8b62a"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="aincline"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:id="@+id/ll_incline_comb"
                    android:layout_width="203dp"
                    android:layout_height="75dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="23.9dp"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_incline_value"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#f8b62a"
                        android:textSize="64sp"
                        android:textStyle="italic"
                        tools:text="1000"/>


                    <TextView
                        android:id="@+id/tv_incline_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="sans-serif"
                        android:text="%"
                        android:textColor="#444444"
                        android:textSize="24dp"
                        android:textStyle="normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="184dp"
                    android:layout_height="88dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="21dp">

                    <Button
                        android:id="@+id/btn_incline_down"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:background="@drawable/btn_down_select"
                        />

                    <Button
                        android:id="@+id/btn_incline_up"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/btn_up_select"
                        />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_incline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="617dp">

                <TextView
                    android:id="@+id/tv_incline"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="normal"/>

            </RelativeLayout>

            <!--btn_check_incline-->

            <!--iv_incline_chg-->
            <RelativeLayout
                android:id="@+id/btn_changing_incline"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="617dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/rectangle_13"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_incline_chg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"/>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sport_speed"
            android:layout_width="208dp"
            android:layout_height="261dp"
            android:layout_alignParentRight="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_speed_title"
                    android:layout_width="208dp"
                    android:layout_height="53dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="0dp"
                    android:background="#269ed3"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="aspeed"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:id="@+id/ll_speed_comb"
                    android:layout_width="203dp"
                    android:layout_height="75dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="24.9dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="#269ed3"
                        android:textSize="64sp"
                        android:textStyle="italic"
                        tools:text="5"/>

                    <TextView
                        android:id="@+id/tv_speed_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="sans-serif"
                        android:text="kph"
                        android:textColor="#444444"
                        android:textSize="24dp"
                        android:textStyle="normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="184dp"
                    android:layout_height="88dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="21dp">

                    <Button
                        android:id="@+id/btn_speed_down"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:background="@drawable/btn_down_select"
                        />

                    <Button
                        android:id="@+id/btn_speed_up"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/btn_up_select"
                        />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="617dp">

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="normal"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_changing"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="617dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_speed_chg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"/>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom_btns"
            android:layout_width="847.9dp"
            android:layout_height="131dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/button_background">


            <ImageButton
                android:id="@+id/btn_cool_down"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="72dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_cool_down_select"/>

            <TextView
                android:id="@+id/tv_btn_cool_down"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="72dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="acool_down"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_pause"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="214dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_pause_select"/>

            <TextView
                android:id="@+id/tv_btn_pause"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="214dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="apause"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_fan"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="500dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_fan_select"/>

            <TextView
                android:id="@+id/tv_btn_fan"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="500dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="afan"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="642dp"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_menu_select"/>

            <TextView
                android:id="@+id/tv_btn_menu"
                android:layout_width="134dp"
                android:layout_height="95dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="642dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="amenu"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_stop"
                android:layout_width="136dp"
                android:layout_height="119dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:paddingTop="17dp"
                android:src="@drawable/btn_stop_select"/>

            <TextView
                android:id="@+id/tv_btn_stop"
                android:layout_width="177dp"
                android:layout_height="119dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="62dp"
                android:text="astop"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/activity_sport_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="@drawable/close_x2"/>


    <LinearLayout
        android:id="@+id/view_common_pi_buy_top_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:id="@+id/overlay_floating_top_bar_live"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_edit_red"
                android:gravity="center"
                android:minWidth="50dp"
                android:text="直播"
                android:textColor="@color/white"
                android:textSize="@dimen/stand_font_l"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/overlay_floating_top_bar_watch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/overlay_floating_top_bar_live"
                android:background="@drawable/bg_edit_watch"
                android:drawableLeft="@drawable/watch"
                android:gravity="center"
                android:minWidth="50dp"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="@dimen/stand_font_l"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/close_x"/>

            <ImageButton
                android:id="@+id/view_common_pi_buy_top_close"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_tran_press"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_adapter_message_board"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_cir_black"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="10dp">

            <ImageButton

                android:id="@+id/view_common_pi_buy_top_product_desc_detail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/list1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:id="@+id/view_common_pi_buy_top_bid_person_area"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="100dp"
                android:background="@drawable/bg_cir_black"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="2sp"
                android:paddingRight="10dp">


                <com.ybcphone.myhttplibrary.view.ViewHeadPic
                    android:id="@+id/view_common_pi_buy_top_head"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"/>


                <TextView
                    android:id="@+id/view_common_pi_buy_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="xxx"
                    android:textColor="@color/white"
                    android:textSize="@dimen/stand_font_s"/>


                <TextView
                    android:id="@+id/view_common_pi_buy_top_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="$6,000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/stand_font_s"/>

            </LinearLayout>

            <Button
                android:id="@+id/view_common_pi_buy_top_buy"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="買"
                android:textColor="@color/white"
                android:textSize="@dimen/stand_font_xxl"
                />


        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>

