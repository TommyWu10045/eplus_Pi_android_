<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oo_screen">


    <TextView
        android:id="@+id/activity_welocome_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:text="Circle"
        android:textColor="@color/red"
        android:textSize="133sp"
        android:visibility="gone" />


    <View
        android:id="@+id/activity_welocome_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/tran_colr" />


    <ImageView
        android:id="@+id/activity_welocome_go"
        android:layout_width="match_parent"
        android:layout_height="600dip"
        android:layout_alignParentBottom="true"
        android:background="@null" />

    <Button
        android:id="@+id/activity_welocome_netflix"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="NetFlix" />

    <Button
        android:id="@+id/activity_welocome_spotify"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_welocome_netflix"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="Spotify" />


    <Button
        android:id="@+id/activity_welocome_end"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_welocome_spotify"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="END" />

</RelativeLayout>
